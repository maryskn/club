<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#2323"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/loginimage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/psd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/logintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:gravity="center"
        android:text="باشگاه مشتریان انصار"
        android:textColor="@color/red"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loginimage1"
        app:layout_constraintStart_toStartOf="@+id/loginimage1"
        app:layout_constraintTop_toBottomOf="@+id/loginimage1"
        app:layout_constraintVertical_bias="0.068" />

    <ImageView
        android:id="@+id/loginimage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logintext"
        app:layout_constraintVertical_bias="0.060000002" />

    <Button
        android:id="@+id/vorood"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/font"
        android:text="ورود"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loginimage2"
        app:layout_constraintStart_toStartOf="@+id/loginimage2"
        app:layout_constraintTop_toBottomOf="@+id/loginimage2"
        app:layout_constraintVertical_bias="0.19999999" />

    <Button
        android:id="@+id/sabtenam"
        android:layout_width="153dp"
        android:layout_height="40dp"
        android:background="@drawable/background_button"
        android:fontFamily="@font/font"
        android:text="ثبت نام"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vorood"
        app:layout_constraintStart_toStartOf="@+id/vorood"
        app:layout_constraintTop_toBottomOf="@+id/vorood"
        app:layout_constraintVertical_bias="0.100000024" />


</androidx.constraintlayout.widget.ConstraintLayout>