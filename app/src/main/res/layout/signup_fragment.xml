<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#2323"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/vorood1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/psd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/voroodtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/font"
        android:gravity="center"
        android:text="باشگاه مشتریان انصار"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/vorood1"
        app:layout_constraintStart_toStartOf="@+id/vorood1"
        app:layout_constraintTop_toBottomOf="@+id/vorood1" />

    <EditText
        android:id="@+id/id"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/font"
        android:hint="  کد ملی"
        android:textSize="12dp"
        android:drawableRight="@drawable/lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voroodtext" />

    <EditText
        android:id="@+id/idcustomer"
        android:fontFamily="@font/font"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textSize="12dp"
        android:drawableRight="@drawable/user_copy"
        android:hint="  شماره مشتری (اختیاری)"
        app:layout_constraintEnd_toEndOf="@+id/id"
        app:layout_constraintStart_toStartOf="@+id/id"
        app:layout_constraintTop_toBottomOf="@+id/id" />

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:fontFamily="@font/font"
        android:layout_marginTop="28dp"
        android:hint="  ایمیل "
        android:textSize="12dp"
        android:drawableRight="@drawable/at"
        app:layout_constraintEnd_toEndOf="@+id/idcustomer"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="@+id/idcustomer"
        app:layout_constraintTop_toBottomOf="@+id/idcustomer" />

    <EditText
        android:id="@+id/reference"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:fontFamily="@font/font"
        android:hint="  کد معرف (اختیاری)"
        android:textSize="12dp"
        android:drawableRight="@drawable/add_user"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/accept"
        app:layout_constraintEnd_toEndOf="@+id/email"
        app:layout_constraintHorizontal_bias="0.707"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintVertical_bias="0.18" />

    <Button
        android:id="@+id/accept"
        android:layout_width="182dp"
        android:layout_height="47dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/font"
        android:text="تایید و ادامه"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>